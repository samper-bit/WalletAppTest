@using System.Globalization
@model WalletApp.Web.Models.ViewModels.TransactionsListViewModel

<div class="d-flex">
    <div class="d-flex flex-column">
        <div class="card text-bg-secondary mb-2" style="max-width: 18rem;">
            <div class="card-header">Card Balance</div>
            <div class="card-body">
                <h5 class="card-title fw-bold">$@Model.User.CardBalance</h5>
                <p class="card-text">Available: $@((1500 - Model.User.CardBalance).ToString())</p>
            </div>
        </div>
        <div class="card text-bg-secondary mb-2" style="max-width: 18rem;">
            <div class="card-header">Daily Points</div>
            <div class="card-body">
                <h5 class="card-title fw-bold">@Model.User.DailyPoints points</h5>
            </div>
        </div>
    </div>

    <div class="card text-bg-secondary ms-2 mb-2 d-flex flex-column justify-content-between" style="max-width: 18rem; flex-grow: 1;">
        <div class="card-header">No Payment Due</div>
        <div class="card-body d-flex flex-column justify-content-between">
            <h5 class="card-title">You've paid your @(DateTime.Now.ToString("MMMM", new System.Globalization.CultureInfo("en-US"))) balance</h5>

            <div class="mt-auto d-flex justify-content-end align-items-end">
                <span style="font-size: 3rem; color: black;">&#10003;</span>
            </div>
        </div>
    </div>
</div>

<h2>Latest Transactions</h2>
<div class="list-group">
    @foreach (var transaction in Model.Transactions)
    {
        <a href="@Url.Action("TransactionDetail", "Transaction", new { id = transaction.Id })" class="list-group-item d-flex justify-content-between align-items-center">
            <div class="d-flex">

                <div class="me-3 d-flex align-items-center justify-content-center" style="width: 50px; height: 50px; background-color: @transaction.Icon; border-radius: 8px;">
                    <i class="bi bi-cash-stack text-white"></i>
                </div>

                <div>
                    <h5 class="mb-0">@transaction.Title</h5>
                    @{
                        if (transaction.Pending == true)
                        {
                            <p class="mb-0 text-muted">Pending - @transaction.Description</p>
                        }
                        else
                        {
                            <p class="mb-0 text-muted">@transaction.Description</p>
                        }
                    }
                    <p class="mb-0 text-muted">
                        @{
                            var daysAgo = (DateTime.Now - transaction.Date).TotalDays;
                            string output;

                            if (daysAgo < 7)
                            {
                                if (transaction.AuthorizedUser != null)
                                {
                                    output = $"{transaction.AuthorizedUser} - {transaction.Date.ToString("dddd", new CultureInfo("en-US"))}";
                                }
                                else
                                {
                                    output = $"{transaction.Date.ToString("dddd", new CultureInfo("en-US"))}";
                                }
                            }
                            else
                            {
                                if (transaction.AuthorizedUser != null)
                                {
                                    output = $"{transaction.AuthorizedUser} - {transaction.Date.ToString("MMMM d, yyyy", new CultureInfo("en-US"))}";
                                }
                                else
                                {
                                    output = $"{transaction.Date.ToString("MMMM d, yyyy", new CultureInfo("en-US"))}";
                                }
                            }
                            @output
                        }
                    </p>
                </div>
            </div>

            <div>
                @if (transaction.Type == 0)
                {
                    <h5 class="fw-bold">+$@transaction.Amount</h5>
                }
                else
                {
                    <h5 class="fw-bold">$@transaction.Amount</h5>
                }


            </div>
        </a>
    }
</div>
